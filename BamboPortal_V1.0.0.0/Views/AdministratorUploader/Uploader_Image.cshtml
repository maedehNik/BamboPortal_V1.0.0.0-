@model BamboPortal_V1._0._0._0.Models.AdministratorUploader.ImageInGalleryModel
@{
    Layout = null;
}
@using (@Html.BeginForm("UploadImages", "AdministratorUploader", FormMethod.Post, new {autocomplete="off", enctype = "multipart/form-data", @id = "MultipartUploaderSubmiter", @class = "m-form m-form--fit m-form--label-align-right" }))
{
    <div class="upload-fields col-12">
        <div class="container-fluid">
            <div class="row">
                <div class="form-group m-form__group col-lg-4" style="padding: 0;">
                    <div class="col-lg-12">

                        @Html.LabelFor(m => m.ImageName, "نام عکس:", new { @id = "ImageName", @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.ImageName, new { @class = "form-control m-input", @placeholder = "نام عکس" })
                        @Html.ValidationMessageFor(m => m.ImageName)
                    </div>
                </div>
                <div class="form-group m-form__group col-lg-4" style="padding: 0;">
                    <div class="col-lg-12">
 
                        @Html.LabelFor(m => m.ImageAlt, "لیبل:", new {@id="ImageAlt", @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.ImageAlt, new { @class = "form-control m-input", @placeholder = "لیبل" })
                        @Html.ValidationMessageFor(m => m.ImageAlt)
                    </div>
                </div>
                <div class="form-group m-form__group col-lg-4" style="padding: 0;">
                    <div class="col-lg-12">

                        @Html.LabelFor(m => m.ImageDescription, "توضیح مختصر:", new {@id="ImageDescription", @class = "form-control-label" })
                        @Html.TextBoxFor(m => m.ImageDescription, new { @class = "form-control m-input", @placeholder = "توضیح مختصر:" })
                        @Html.ValidationMessageFor(m => m.ImageDescription)

                        <input id="SkipImageIDS" name="SkipImageIDS" style="display:none" />
                    </div>
                </div>
                <div class="m-portlet__foot m-portlet__foot--fit">
                    <div class="m-form__actions">
                        <div class="row">
                            <div class="col-lg-12 tshtextleft" style="padding-left: 0;">
                                <button id="MultipartUploaderSubmiter_SubmitBTN" type="submit" class="btn btn-accent m-btn m-btn--air m-btn--custom tga">ثبت</button>&nbsp;&nbsp;
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="upload-div col-12">
        <div class="gallery col-12 row"></div>
        <div class="col-12 dropzone-uploader">

            <input type="file" id="UploadedImages" name="UploadedImages" class="file-selected" style="display: none;" multiple>

            <div class="m-dropzone custom-dropzone" action="#" id="">
                <div class="m-dropzone__msg dz-message needsclick">
                    <h3 class="m-dropzone__msg-title">فایل را انتخاب کنید</h3>
                    <span class="m-dropzone__msg-desc" style="display: none;">فقط امکان انتخاب یک فایل وجود دارد</span>
                </div>
            </div>
        </div>
    </div>


}