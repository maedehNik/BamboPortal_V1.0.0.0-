                                <strong>
                                    -
                                    @Model.ProductModel.Title
                                </strong>
                            </h4>
                            <span class="desc-title pad-right-15 pad-left-15">
                                <i class="fa fa-chevron-left tshfatrtry3"></i>
                                توضیحات
                            </span>
