<div class="theme-background-section full-screen fs-overlay">
    <div class="content-container">
        <div class="content-inner-container log-reg-res">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <ul class="nav tab-theme tab-bg pricing-tab-2-col pt0-res">
                            <li class="active" style="float: right">
                                <a href="#tab1" data-toggle="tab">ورود</a>
                            </li>
                            <li style="float: left">
                                <a href="#tab2" data-toggle="tab">ثبت نام</a>
                            </li>
                        </ul>
                        <div class="tab-theme login-register">
                            <div class="tab-content">
                                <div id="tab1" class="tab-pane active pad-top-50">
                                    <div class="row">
                                        <div class="col-md-12 no-padding-side">
                                            <div class="form-theme form-grey">
                                                <form action="" method="post" autocomplete="off" id="login-form">
                                                    <div class="form-group pad-bot-15">
                                                        <label for="mobile" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">شماره موبایل<i class="icon-phone text-right tsh-icon" style="float: left;"></i></label>
                                                        <input type="number" class="form-control" name="mobile" id="mobile">
                                                    </div>
                                                    <div class="form-group pad-bot-15">
                                                        <label for="password" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">کلمه عبور<i class="icon-lock text-right tsh-icon" style="float: left;"></i></label>
                                                        <input type="password" class="form-control" name="password" id="password">
                                                        <a href="#" class="text-light letter-spacing-2 text-uppercase mar-top-5 forgot-password" style="font-size: 11px; letter-spacing: 0px!important; color: black!important;text-align: left;width: 100%;display: block">رمز عبور خود را فراموش کرده اید؟</a>
                                                    </div>
                                                    <input type="submit" class="btn btn-success form-submit login-submit" value="ورود">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 forgot-password-bg">
                                    <div class="forgot-password-inner col-lg-4 col-md-4 col-sm-8 col-xs-12 form-theme form-grey">
                                        <h5>
                                            فراموشی رمز عبور
                                            <i class="fa fa-times"></i>
                                        </h5>
                                        <form action="" method="post" autocomplete="off" id="reset-pw-form">
                                            <div class="form-group pad-bot-15">
                                                <label for="resetmobile" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">شماره موبایل<i class="icon-phone text-right tsh-icon" style="float: left;"></i></label>
                                                <input type="number" class="form-control" name="resetmobile" id="resetmobile">
                                            </div>
                                            <input type="submit" class="btn btn-primary form-submit" value="ارسال رمز عبور جدید">
                                        </form>
                                    </div>
                                </div>
                                <div id="tab2" class="tab-pane pad-top-50">
                                    <div class="row">
                                        <div class="col-md-12 no-padding-side">
                                            <div class="form-theme form-grey">
                                                <form action="" method="post" autocomplete="off" id="registration-form">
                                                    <div class="form-group pad-bot-15">
                                                        <label for="firstname" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">نام<i class="icon-profile-male text-right tsh-icon" style="float: left;"></i></label>
                                                        <input type="text" class="form-control" name="firstname" id="firstname" />
                                                    </div>
                                                    <div class="form-group pad-bot-15">
                                                        <label for="lastname" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">نام خانوادگی<i class="icon-profile-male text-right tsh-icon" style="float: left;"></i></label>
                                                        <input type="text" class="form-control" name="lastname" id="lastname" />
                                                    </div>
                                                    <div class="form-group pad-bot-15">
                                                        <label for="sumobile" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">شماره موبایل<i class="icon-phone text-right tsh-icon" style="float: left;"></i></label>
                                                        <input type="number" class="form-control" name="sumobile" id="sumobile" />
                                                    </div>
                                                    <div class="form-group pad-bot-15">
                                                        <label for="supassword" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">کلمه عبور<i class="icon-lock text-right tsh-icon" style="float: left;"></i></label>
                                                        <input type="password" class="form-control" name="supassword" id="supassword" />
                                                    </div>
                                                    <div class="form-group pad-bot-15">
                                                        <label for="surpassword" class="control-label text-uppercase letter-spacing-3 pad-bot-5" style="width: 100%;letter-spacing: 0px !important;">تکرار کلمه عبور<i class="icon-lock text-right tsh-icon" style="float: left;"></i></label>
                                                        <input type="password" class="form-control" name="surpassword" id="surpassword" />
                                                    </div>
                                                    <div class="form-group pad-bot-15 custom-check-reg">
                                                        <input type="checkbox" class="option-input form-control checkbox" name="ghinput" />
                                                        <a href="#">قوانین</a>
                                                        را قبول دارم
                                                    </div>
                                                    <input type="submit" class="btn btn-primary form-submit reg-submit" value="ثبت نام">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CS_Scripts {
    <script>
        var revapi;
        jQuery(document).ready(function () {
            setInterval(function () {
                $('.owl-prev').trigger('click');
            }, 3000);


            revapi = jQuery("#rev_slider_1").revolution({
                sliderType: "standard",
                sliderLayout: "fullscreen",
                fullScreenOffsetContainer: ".navigation",
                delay: 9000,
                navigation: {
                    keyboardNavigation: "off",
                    mouseScrollNavigation: "on",
                    onHoverStop: "off",
                    touch: {
                        touchenabled: "on",
                        swipe_threshold: 75,
                        swipe_min_touches: 1,
                        swipe_direction: "horizontal",
                        drag_block_vertical: false
                    },
                    bullets: {
                        enable: true,
                        rtl: true,
                        hide_onmobile: false,
                        style: "hebe",
                        hide_onleave: false,
                        direction: "horizontal",
                        h_align: "center",
                        v_align: "bottom",
                        h_offset: 0,
                        v_offset: 10,
                        space: 5,
                        tmp: '<span class="tp-bullet-inner"></span>'
                    }
                },
                responsiveLevels: [4096, 1024, 767, 480],
                gridwidth: 1230,
                gridheight: 720
            });

            $("#LoaderSpinner").hide(0);
        }); /*ready*/
    </script>
