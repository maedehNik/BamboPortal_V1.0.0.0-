        <div class="slider-item" style="background-image: url('@Url.Content("~/resource/images/velvetslide1.jpg")'); background-position: center center;background-size: cover;"></div>
    </div>
    <div class="item">
        <div class="slider-item" style="background-image: url('@Url.Content("~/resource/images/velvetslide2.jpg")'); background-position: center center;background-size: cover;"></div>
